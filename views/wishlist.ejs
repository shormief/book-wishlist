<!DOCTYPE html>
<html>
	<head>
		<title>Final Prototype</title>
		<link rel="stylesheet" type="text/css" href="wishlist.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
		<script src="script.js" defer></script>
		<link href="https://fonts.googleapis.com/css?family=Quicksand|Patrick+Hand+SC|Josefin+Sans" rel="stylesheet">
		<link rel="icon" type="image/png" href="https://png.pngtree.com/svg/20170613/plan_328501.png">
		<meta name="viewport" content="width=device-width">
	</head>
	<body>
		<!-- NAVBAR -->
		<div id="navbar">
			<nav>
				<div class="logo">
					<a href="index.html"><img src="https://png.pngtree.com/svg/20170613/plan_328501.png"></a>
				</div>
			</nav>
		</div>
		<!-- BACK TO SEARCH BUTTON -->
		<div id="goToButtons">
			<form method="POST" action="/backToSearch">
				<input id="searchSubmit" type="submit" name="submitButton" value="Back to Search">
			</form>
			<form method="POST" action="/timetable">
				<input id="generateTimetable" type="submit" name="generateTimetable" value="Timetable">
			</form>
		</div>
		<!-- HEADING -->
		<div id="heading">
			<h2>Wishlist</h2> 
		</div>
		<!-- LIST -->
		<div id="list">
			<!-- ITERATING THROUGH allTheBooksData -->
			<% for (var i = 0; i < allTheBookData.length; i++) { %>
				<div id="volumeInfo">
					<div  id="book-img">
						<img class="one-edge-shadow" src="<%=allTheBookData[i].img%>">
					<div id="book-info">
						<h4><span id="title"><%=allTheBookData[i].title%></span></h4>
						<p>Author: <span id="authors"><%=allTheBookData[i].authors%></span></p>
						<p>Date Published: <span id="pubDate"><%=allTheBookData[i].pubDate%></span></p>
						<p>ISBN: <span id="isbn"><%=allTheBookData[i].isbn%></span></p>
						<p>Average Rating: <span id="avgRating"><%=allTheBookData[i].avgRating%></span></p>
						<form method="POST" action="/removeBook">
							<input type="hidden" name="removeTitle" value="<%=allTheBookData[i].title%>">
							<input id="removeBookButton" type="submit" name="removeThisBook" value="Remove">
						</form>
					</div>
					</div>
				</div>	
			<% } %>
			<!-- GENERATE TIMETABLE BUTTON -->
			<div id="timetableButton">
				<form method="POST" action="/timetable">
					<input id="generateTimetableBottom" type="submit" name="generateTimetable" value="Generate Timetable">
				</form>
			</div>
		</div>
	</body>
</html>